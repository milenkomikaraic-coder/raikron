{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Llama API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-llama-api",
      "program": "${workspaceFolder}/LlamaApi/bin/Debug/net9.0/LlamaApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/LlamaApi",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "killOnServerStop": false
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "justMyCode": false,
      "requireExactSource": false
    },
    {
      "name": ".NET Core Launch (Llama API - No Build)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/LlamaApi/bin/Debug/net9.0/LlamaApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/LlamaApi",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "killOnServerStop": false
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "justMyCode": false,
      "requireExactSource": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}